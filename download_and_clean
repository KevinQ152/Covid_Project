import os
import pandas as pd
import numpy as np
import datetime as dt

#Downloads and cleans Covid data
#test
#Johns Hopkins data downloaded from Git Hub
url = 'https://raw.githubusercontent.com/CSSEGISandData/COVID-19/master/csse_covid_19_data/csse_covid_19_daily_reports_us/'
data_by_state = pd.read_csv(url + "04-12-2020" + ".csv")

#Automatically updates to get the most current data
start = dt.date(2020, 4, 13)
end = dt.date.today()
delta = dt.timedelta(days=1)

while start <= end:
    date_string = start.strftime("%m-%d-%Y")
    try:
        new_day = pd.read_csv(url + date_string + ".csv")
        data_by_state = data_by_state.append(new_day)
    except:
        break
    start += delta

#print(data_by_state.iloc[57][:])
data_by_state.to_csv(r"C:\Users\kq146\code\Covid_data\updated_data.csv")
